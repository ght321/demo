{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "java",
      "name": "Main",
      "request": "launch",
      "mainClass": "com.example.cardgame.controller.Main",
      "projectName": "demo"
    },
    {
      "type": "java",
      "request": "launch",
      "name": "Debug Main",
      "mainClass": "com.example.cardgame.Main",
      "projectName": "demo",
      "console": "integratedTerminal",
      "args": "",
      "classPaths": [
        "${workspaceFolder}/out"
      ]
    }
  ]
}